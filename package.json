{
  "name": "apvs-asynchronous-worker",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/apvs-asynchronous-worker.git"
  },
  "engines": {
    "node": "12.x.x"
  },
  "scripts": {
    "start": "node start.js",
    "start-schedule-daily-tasks": "node start-schedule-daily-tasks.js",
    "start-schedule-payment-run": "node start-schedule-payment-run.js",
    "test": "standard && mocha --recursive test/unit/ --exit",
    "test-unit": "mocha --recursive test/unit/ --exit",
    "test-integration": "mocha --recursive test/integration/ --timeout 5000 --exit",
    "test-coverage": "istanbul cover -x 'app/services/data/**' -x 'app/services/benefit-checker/**' -x 'app/services/direct-payments/**' -x 'app/services/payout-payments/**' -x 'app/services/notify/**' -x 'app/services/performance-platform/**' -x 'app/services/distance-checker/call-distance-api-for-postcodes.js' -x 'app/services/cleanup-old-data/delete-old-payment-files.js' _mocha -- --recursive -u exports test/unit/"
  },
  "standard": {
    "ignore": [
      "cache_node_modules/*"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it"
    ]
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.3",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "standard": "^14.3.3",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "bunyan": "^1.8.12",
    "bunyan-logstash-tcp": "^1.0.0",
    "bunyan-prettystream": "^0.1.3",
    "cron": "^1.8.2",
    "csv": "^5.3.2",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "istanbul": "^0.4.5",
    "knex": "^0.20.15",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mssql": "^6.2.0",
    "mv": "http://registry.npmjs.org/mv/-/mv-2.1.1.tgz",
    "notifications-node-client": "2.1.0",
    "python-shell": "^0.4.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "sftp-promises": "^1.7.0",
    "xml2js": "^0.4.23",
    "xml2js-xpath": "^0.11.0",
    "zendesk-node-api": "^1.3.0"
  }
}
