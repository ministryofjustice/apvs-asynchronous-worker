{
  "name": "apvs-asynchronous-worker",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/apvs-asynchronous-worker.git"
  },
  "engines": {
    "node": "6.x.x"
  },
  "scripts": {
    "start": "node start.js",
    "start-schedule-daily-tasks": "node start-schedule-daily-tasks.js",
    "start-schedule-payment-run": "node start-schedule-payment-run.js",
    "test": "standard && mocha --recursive -u exports test/unit/",
    "test-unit": "mocha --recursive -u exports test/unit/",
    "test-integration": "mocha --recursive -u exports test/integration/ --timeout 5000",
    "test-coverage": "istanbul cover -x 'app/services/data/**' -x 'app/services/benefit-checker/**' -x 'app/services/direct-payments/**' -x 'app/services/payout-payments/**' -x 'app/services/notify/**' -x 'app/services/performance-platform/**' -x 'app/services/distance-checker/call-distance-api-for-postcodes.js' -x 'app/services/cleanup-old-data/delete-old-payment-files.js' _mocha -- --recursive -u exports test/unit/"
  },
  "standard": {
    "ignore": [
      "cache_node_modules/*"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it"
    ]
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.6",
    "sinon-bluebird": "^3.1.0",
    "standard": "^8.4.0",
    "supertest": "^2.0.1"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "bunyan": "^1.8.4",
    "bunyan-logstash-tcp": "^0.3.4",
    "bunyan-prettystream": "^0.1.3",
    "cron": "^1.1.1",
    "csv": "^1.1.0",
    "debug": "^2.2.0",
    "express": "^4.14.0",
    "istanbul": "^0.4.5",
    "knex": "^0.19.4",
    "lodash": "^4.17.2",
    "moment": "^2.15.2",
    "mssql": "^5.1.0",
    "mv": "http://registry.npmjs.org/mv/-/mv-2.1.1.tgz",
    "notifications-node-client": "2.1.0",
    "python-shell": "^0.4.0",
    "request": "^2.78.0",
    "request-promise": "^4.1.1",
    "sftp-promises": "^1.4.0",
    "xml2js": "^0.4.17",
    "xml2js-xpath": "^0.7.0",
    "zendesk-node-api": "^1.2.0"
  }
}
